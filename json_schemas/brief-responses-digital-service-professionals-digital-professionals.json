{
  "$schema": "http://json-schema.org/schema#",
  "additionalProperties": false,
  "properties": {
    "availability": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "dayRate": {
      "pattern": "^\\d{1,15}(?:\\.\\d{1,5})?$",
      "type": "string"
    },
    "essentialRequirements": {
      "items": {
        "type": "boolean"
      },
      "maxItems": 20,
      "minItems": 1,
      "type": "array"
    },
    "niceToHaveRequirements": {
      "items": {
        "type": "boolean"
      },
      "maxItems": 20,
      "minItems": 0,
      "type": "array"
    },
    "respondToEmailAddress": {
      "format": "email",
      "minLength": 1,
      "type": "string"
    }
  },
  "required": [
    "availability",
    "dayRate",
    "essentialRequirements",
    "respondToEmailAddress"
  ],
  "title": "Digital Service Professionals Brief Response Schema",
  "type": "object"
}
