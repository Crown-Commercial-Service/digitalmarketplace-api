{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "companiesHouseNumber": {
      "oneOf": [
        {
          "maxLength": 8,
          "minLength": 8,
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "contactInformation": {
      "items": {
        "$ref": "file:json_schemas/contact-information.json"
      },
      "minItems": 1,
      "type": "array"
    },
    "description": {
      "type": "string"
    },
    "dunsNumber": {
      "pattern": "^[0-9]+$",
      "type": "string"
    },
    "id": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "organisationSize": {
      "type": "string"
    },
    "otherCompanyRegistrationNumber": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "null"
        }
      ]
    },
    "registeredName": {
      "type": "string"
    },
    "registrationCountry": {
      "type": "string"
    },
    "tradingStatus": {
      "type": "string"
    },
    "vatNumber": {
      "type": "string"
    },
    "companyDetailsConfirmed": {
      "type": "boolean"
    }
  },
  "required": [
    "id",
    "name"
  ],
  "title": "Schema to validate updates to supplier data",
  "type": "object"
}
