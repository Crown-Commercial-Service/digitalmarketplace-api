{
  "id": "API Updater Schema",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 255,
      "minLength": 1
    },
    "email_address": {
      "type": "string",
      "pattern": "^[^@^\\s]+@[^@^\\.^\\s]+(\\.[^@^\\.^\\s]+)+$"
    },
    "password": {
      "type": "string",
      "maxLength": 255,
      "minLength": 10
    },
    "role": {
      "type": "string",
      "pattern": "^(buyer|supplier|admin)$"
    },
    "hashpw": {
      "type": "boolean"
    }
  },
  "required": [
    "name",
    "email_address",
    "password"
  ]
}

