{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "emailAddress": {
      "pattern": "^[^@^\\s]+@[^@^\\.^\\s]+(\\.[^@^\\.^\\s]+)+$",
      "type": "string"
    },
    "password": {
      "maxLength": 255,
      "minLength": 10,
      "type": "string"
    }
  },
  "required": [
    "emailAddress",
    "password"
  ],
  "title": "API Updater Schema",
  "type": "object"
}