{
  "$schema": "http://json-schema.org/schema#",
  "additionalProperties": false,
  "properties": {
    "additionalTerms": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,49}\\S+$)",
      "type": "string"
    },
    "backgroundInformation": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "contractLength": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "culturalWeighting": {
      "exclusiveMaximum": false,
      "maximum": 20,
      "minimum": 5,
      "type": "integer"
    },
    "currentTechnologies": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,99}\\S+$)",
      "type": "string"
    },
    "essentialRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,9}\\S+$",
        "type": "string"
      },
      "maxItems": 10,
      "minItems": 1,
      "type": "array"
    },
    "evaluationType": {
      "items": {
        "enum": [
          "provide a written proposal",
          "provide a case study or evidence of previous work",
          "presentation",
          "pitch"
        ]
      },
      "maxItems": 4,
      "minItems": 1,
      "type": "array",
      "uniqueItems": true
    },
    "importantDates": {
      "minLength": 1,
      "pattern": "^(?:\\S+\\s+){0,99}\\S+$",
      "type": "string"
    },
    "location": {
      "enum": [
        "Scotland",
        "North East England",
        "North West England",
        "Yorkshire and the Humber",
        "East Midlands",
        "West Midlands",
        "East of England",
        "Wales",
        "London",
        "South East England",
        "South West England",
        "Northern Ireland",
        "Offsite"
      ]
    },
    "niceToHaveRequirements": {
      "items": {
        "maxLength": 100,
        "pattern": "^(?:\\S+\\s+){0,9}\\S+$",
        "type": "string"
      },
      "maxItems": 10,
      "minItems": 0,
      "type": "array"
    },
    "organisation": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "priceWeighting": {
      "exclusiveMaximum": false,
      "maximum": 85,
      "minimum": 20,
      "type": "integer"
    },
    "specialistRole": {
      "enum": [
        "agileCoach",
        "businessAnalyst",
        "communicationsManager",
        "contentDesigner",
        "securityConsultant",
        "deliveryManager",
        "designer",
        "developer",
        "portfolioManager",
        "productManager",
        "programmeManager",
        "qualityAssurance",
        "serviceManager",
        "userResearcher",
        "webOperations"
      ]
    },
    "startDate": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "technicalWeighting": {
      "exclusiveMaximum": false,
      "maximum": 75,
      "minimum": 10,
      "type": "integer"
    },
    "title": {
      "maxLength": 100,
      "minLength": 1,
      "type": "string"
    },
    "workingArrangements": {
      "minLength": 0,
      "pattern": "^$|(^(?:\\S+\\s+){0,49}\\S+$)",
      "type": "string"
    }
  },
  "required": [
    "backgroundInformation",
    "contractLength",
    "culturalWeighting",
    "essentialRequirements",
    "evaluationType",
    "importantDates",
    "location",
    "organisation",
    "priceWeighting",
    "specialistRole",
    "startDate",
    "technicalWeighting",
    "title"
  ],
  "title": "Digital Outcomes and Specialists Digital specialists Brief Schema",
  "type": "object"
}
