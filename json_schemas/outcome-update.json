{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "completed": {
      "type": "boolean"
    },
    "award": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "startDate": {
          "OneOf": [
            {
              "type": "string",
              "pattern": "\\d{4}-\\d{2}-\\d{2}"
            },
            {
              "type": "null"
            }
          ]
        },
        "endDate": {
          "OneOf": [
            {
              "type": "string",
              "pattern": "\\d{4}-\\d{2}-\\d{2}"
            },
            {
              "type": "null"
            }
          ]
        },
        "awardingOrganisationName": {
          "OneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "awardValue": {
          "OneOf": [
            {
              "type": "string",
              "pattern": "[\\d.]+"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    }
  },
  "title": "Schema to validate outcome updates",
  "type": "object"
}
