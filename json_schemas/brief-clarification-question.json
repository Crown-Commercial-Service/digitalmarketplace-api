{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Brief clarification question schema",
  "type": "object",
  "properties": {
    "question": {
      "minLength": 1,
      "maxLength": 5000,
      "pattern": "^$|(^(?:\\S+\\s+){0,99}\\S+$)",
      "type": "string"
    },
    "answer": {
      "minLength": 1,
      "maxLength": 5000,
      "pattern": "^$|(^(?:\\S+\\s+){0,99}\\S+$)",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["question", "answer"]
}
